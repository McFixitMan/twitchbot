{
  "compileOnSave": false,
  "compilerOptions": {
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [
          "es2017"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "build",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es2017",
      "strict": true,
  },
  "exclude": [
      "./node_modules",
      "**/*.spec.ts"
  ],
  "include": [
      "./src/*",
      "./build/",
      "./types"
  ]
}